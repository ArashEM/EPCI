pipeline{
    agent none 
    stages {
        stage('Build'){
         agent {
            label 'dh-01'
        }
            steps {
                sh 'git clone https://github.com/ArashEM/EPCI.git --depth=1'
                sh 'cd FW/sources/driver'
                sh 'make clean'
                sh 'make'
                archive 'build/*.ko'
            }   
        }
    }
    post {
		cleanup {
			deleteDir()
		}
	}
}